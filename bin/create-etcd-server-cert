#!/bin/sh

if [ -z $1 ]; then
    echo Usage: $0 CommonName [Additional IP] [Additional IP] [Additional IP]1>&2
    echo 1>&2
    echo Example: $0 ca.etcd.example.com 1>&2
    echo Example: $0 ca.etcd.example.com 1.2.3.4 1>&2
    echo Example: $0 ca.etcd.example.com 1.2.3.4 4.3.2.1 11.22.33.44 1>&2
    echo 1>&2
    exit 1
fi

export CN=$1
export SAN="IP:127.0.0.1"

if [ ! -z $2 ]; then
    SAN="${SAN}, IP:$2"
fi

if [ ! -z $3 ]; then
    SAN="${SAN}, IP:$3"
fi

if [ ! -z $4 ]; then
    SAN="${SAN}, IP:$4"
fi

export ETCD_CA_DIR=${CLOUDCONFIG_INSTALL_DIR}/var/etcd-ca

openssl req -config ${CLOUDCONFIG_INSTALL_DIR}/conf/openssl.cnf -new -nodes \
  -keyout ${ETCD_CA_DIR}/private/${CN}.key -out ${ETCD_CA_DIR}/${CN}.csr

if [ $? -ne 0 ];then
    echo "Could not create certificate signing request. Aborting!" 1>&2
    exit 1
fi

openssl ca -config ${CLOUDCONFIG_INSTALL_DIR}/conf/openssl.cnf -extensions etcd_server \
  -out ${ETCD_CA_DIR}/certs/${CN}.crt -infiles ${ETCD_CA_DIR}/${CN}.csr
  
if [ $? -ne 0 ];then
    echo "Could not create certificate. Aborting!" 1>&2
    exit 1
fi

echo Created client certificate
echo
echo Created private key in ${ETCD_CA_DIR}/private/${CN}.key
echo Created certificate in ${ETCD_CA_DIR}/certs/${CN}.crt
